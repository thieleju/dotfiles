[user]
  name = thieleju
  email = thiele.juli@gmail.com
  signingkey = INSERT_KEY_HERE

[core]
  editor = nvim
  eol = lf
  autocrlf = false
  pager = delta

[color]
  ui = auto

[push]
  rebase = false
  followTags = true
  autoSetupRemote = true
  default = matching

[pull]
  rebase = false

[alias]
  adog = log --all --decorate --oneline --graph

[commit]
  gpgsign = true

[gpg]
  program = gpg

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[delta]
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
